{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-secret-scan --mode=pre --client=claude_code"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|read",
        "hooks": [
          {
            "type": "command",
            "command": "claude-secret-scan --mode=pre --client=claude_code"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|read",
        "hooks": [
          {
            "type": "command",
            "command": "claude-secret-scan --mode=post --client=claude_code"
          }
        ]
      },
      {
        "matcher": "Bash|bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude-secret-scan --mode=post --client=claude_code"
          }
        ]
      }
    ]
  }
}
